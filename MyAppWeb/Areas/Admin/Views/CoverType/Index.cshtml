@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row p-3">
        <div class="col-6 pt-4">
            <h1 class="text-primary">Cover Type List</h1>
        </div>
        <div class="col-6 text-end pt-4">
            <a class="btn btn-lg btn-primary" asp-controller="CoverType" asp-action="Create" >
                <i class="bi bi-plus-circle"></i> &nbsp Add New Cover Type
                </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover" style="width:100%">
    <thead>
        <tr>
            <th class="fs-5">Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(CoverType obj in Model)
        {
        <tr>
            <td width="80%" class="fs-5">@obj.Name</td>
            <td>
               <a class="btn btn-primary" asp-controller="CoverType" asp-action="Edit"  asp-route-id="@obj.Id">
                   <i class="bi bi-pencil-square"></i> &nbsp Edit
                </a>
               <a class="btn btn-danger" asp-controller="CoverType" asp-action="Delete"  asp-route-id="@obj.Id">
                   <i class="bi bi-trash3"></i> &nbsp Delete
               </a>
            </td>
        </tr>   
        }
    </tbody>
</table>
