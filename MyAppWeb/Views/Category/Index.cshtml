@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div>
    <div>
        <h1>Category</h1>
    </div>
    <div>
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create" >Add New Category</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category obj in Model)
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
               <a class="btn btn-primary" asp-controller="Category" asp-action="Edit"  asp-route-id="@obj.Id">Edit</a>
               <a class="btn btn-primary" asp-controller="Category" asp-action="Delete"  asp-route-id="@obj.Id">Delete</a>
            </td>
        </tr>   
        }
    </tbody>

</table>

