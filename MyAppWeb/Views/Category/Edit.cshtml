@model Category
@{
    ViewData["Title"] = "Create";
}

<div>
    <form method="post">
        <div>
            <a2>Edit Category</a2>
        </div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div>
            <label asp-for="DisplayOrder"></label>
